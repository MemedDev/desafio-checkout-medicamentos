{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "selector-max-id": 1,
    "max-nesting-depth": 3,
    "selector-max-compound-selectors": 4,
    "order/order": [
      [
        "custom-properties",
        "declarations"
      ],
      {
        "disableFix": false
      }
    ]
  }
}
